{
  "scripts": {
    "eleventy": "npx eleventy --serve",
    "watch:webpack": "npx webpack --watch",
    "watch:tailwind": "npx tailwindcss -i ./src/styles/styles.css -o ./public/styles/styles.css --watch",
    "watch": "concurrently \"yarn run watch:tailwind\" \"yarn run watch:webpack\" \"yarn run eleventy\""
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "concurrently": "^7.6.0",
    "tailwindcss": "^3.2.7",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "vue": "2.7.14"
  }
}
